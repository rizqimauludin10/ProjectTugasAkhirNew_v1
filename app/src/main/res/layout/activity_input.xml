<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundmain"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".InputActivity">


        <include
            layout="@layout/app_bar_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/ketprofil"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Laundry"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/btprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ketprofil"
                android:text=" *"
                android:textColor="@color/bintang"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintText"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/namaLaundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Masukkan nama laundry.."
                    android:inputType="text"
                    android:textSize="15sp"
                    android:theme="@style/MyEditTextStyle2" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/ketdesc"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Laundry"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintText"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/descLaundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Masukkan deskripsi laundry..."
                    android:inputType="text"
                    android:textSize="15sp"
                    android:theme="@style/MyEditTextStyle2" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/ketHP"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Handphone"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/btHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ketHP"
                android:text=" *"
                android:textColor="@color/bintang"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintText"
                android:id="@+id/inputHp"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/nohpLaundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Masukkan nomor whatsapp..."
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:theme="@style/MyEditTextStyle2" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/ketAlamat"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Laundry"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/btAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ketAlamat"
                android:text=" *"
                android:textColor="@color/bintang"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintText"
                app:errorEnabled="true"
                android:id="@+id/inputalamat">

                <EditText
                    android:id="@+id/alamatLaundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Masukkan Nama Jalan, Kelurahan dll..."
                    android:inputType="textLongMessage"
                    android:textSize="15sp"
                    android:theme="@style/MyEditTextStyle2" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/ketLat"
                        fontPath="font/TitilliumWeb-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="Lattitude"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/btLat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/ketLat"
                        android:text=" *"
                        android:textColor="@color/bintang"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/HintText"
                        app:errorEnabled="true"
                        android:id="@+id/inputlat">

                        <EditText
                            android:id="@+id/LatLaundry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="9"
                            android:focusable="false"
                            android:inputType="numberDecimal"
                            android:maxLength="15"
                            android:textSize="15sp"
                            android:theme="@style/MyEditTextStyle2" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/ketLng"
                        fontPath="font/TitilliumWeb-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="Longitude"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/btLng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/ketLng"
                        android:text=" *"
                        android:textColor="@color/bintang"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/HintText"
                        app:errorEnabled="true"
                        android:id="@+id/inputlng">

                        <EditText
                            android:id="@+id/LngLaundry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="9"
                            android:focusable="false"
                            android:inputType="numberDecimal"
                            android:maxLength="15"
                            android:textSize="15sp"
                            android:theme="@style/MyEditTextStyle2" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/tampilMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rippleinput"
                android:textAllCaps="false"
                android:textColor="@color/white"
                fontPath="font/TitilliumWeb-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:text="Ubah Lokasi" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/ketKecamatan"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/btKec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ketKecamatan"
                android:text=" *"
                android:textColor="@color/bintang"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <Spinner
                android:id="@+id/spinnerKecamatan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineSpotShadowColor="@color/iconApps"
                android:spinnerMode="dialog"
                android:tooltipText="Pilih Kecamatan" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/ketLibur"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Libur Tanggal Merah"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/btLibur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ketLibur"
                android:text=" *"
                android:textColor="@color/bintang"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <RadioGroup
                android:id="@+id/rg_Libur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rgLiburYa"
                    fontPath="font/TitilliumWeb-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Ya"
                    android:textAllCaps="false"
                    android:textColor="@color/username"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix" />

                <RadioButton
                    android:id="@+id/rgLiburTidak"
                    fontPath="font/TitilliumWeb-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak"
                    android:textAllCaps="false"
                    android:textColor="@color/username"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tvFotoLaundry"
                fontPath="font/TitilliumWeb-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Foto Laundry"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/btFotoLaundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvFotoLaundry"
                android:text=" *"
                android:textColor="@color/bintang"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">



            <ImageView
                android:id="@+id/photo"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photosrc"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/addimage"/>
            </FrameLayout>

            <Button
                android:id="@+id/openCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photo"
                android:background="@drawable/rippleinput"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Pilih gambar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                tools:ignore="MissingPrefix" />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rippleinput"
                android:text="Selanjutnya"
                android:textAllCaps="false"
                android:textColor="@color/white"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                tools:ignore="MissingPrefix" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>

