<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/backgroundmain"
    android:orientation="vertical"
    android:id="@+id/itemclick"
    android:background="@drawable/ripple_effect"
    android:clickable="true">

    <LinearLayout

        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IvLaundry"
            android:scaleType="centerCrop"
            android:background="@color/image"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/buka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buka"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/circle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/tvLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tvDescLaundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Laundry"
                android:maxLength="20"
                android:textColor="@color/text"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/rp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / kg"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/circle1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:id="@+id/fasilitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuci Biasa"
                    android:textSize="18sp"
                    android:textColor="#F07198" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvNamaLaundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Laundry"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                tools:ignore="MissingPrefix" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>